<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BuildMaX</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top border-bottom">
    <div class="container">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">BuildMaX</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navPublic"
                aria-controls="navPublic" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navPublic">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Pricing">Cennik</a>
                </li>
            </ul>

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Account" asp-action="Login">Zaloguj</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-primary" asp-controller="Account" asp-action="Register">Rejestracja</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<main class="container pt-4">
    @RenderBody()
</main>

<footer class="border-top mt-5 py-3 text-muted">
    <div class="container">
        <small>&copy; 2026 BuildMaX â€” RockPiryt (Paulina Kimak)</small>
    </div>
</footer>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>
