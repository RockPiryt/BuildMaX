<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BuildMaX</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand" asp-controller="Dashboard" asp-action="Index">BuildMaX</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navApp"
                aria-controls="navApp" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navApp">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="AnalysisRequests" asp-action="Index">Analizy</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="AnalysisRequests" asp-action="Create">Nowa analiza</a>
                </li>

                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Admin
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Variants" asp-action="Index">Warianty</a></li>
                            <li><a class="dropdown-item" asp-controller="LegalDocuments" asp-action="Index">Dokumenty</a></li>
                        </ul>
                    </li>
                }

                @if (User.IsInRole("Admin") || User.IsInRole("Analyst"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Analityk
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="AnalysisRequests" asp-action="Index">Wszystkie analizy</a></li>
                            <li><a class="dropdown-item" asp-controller="AnalysisRequests" asp-action="Dashboard">Dashboard</a></li>
                            <li><a class="dropdown-item" asp-controller="AnalysisRequests" asp-action="ProfitabilityRanking">Ranking opłacalności</a></li>
                        </ul>
                    </li>
                }
            </ul>

            <partial name="_LoginPartial" />
        </div>
    </div>
</nav>

<main class="container-fluid pt-4">
    @RenderBody()
</main>

<footer class="border-top mt-5 py-3 text-muted">
    <div class="container">
        <small>&copy; 2026 BuildMaX — RockPiryt (Paulina Kimak)</small>
    </div>
</footer>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>
