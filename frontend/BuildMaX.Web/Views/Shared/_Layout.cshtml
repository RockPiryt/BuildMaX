<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BuildMaX</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
<header class="nav">
    <span class="brand">BuildMaX</span>
    <a asp-controller="Home" asp-action="Index">Home</a>
    <a asp-controller="Home" asp-action="Pricing">Cennik</a>

    <span class="spacer"></span>

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <a asp-controller="Dashboard" asp-action="Index">Dashboard</a>

        <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
            @Html.AntiForgeryToken()
            <button type="submit" class="secondary">Logout</button>
        </form>
    }
    else
    {
        <a asp-controller="Account" asp-action="Login">Login</a>
        <a asp-controller="Account" asp-action="Register">Register</a>
    }
</header>

<div class="container">
    @RenderBody()
    <div class="footer">&copy; @DateTime.Now.Year BuildMaX</div>
</div>

@RenderSection("Scripts", required: false)
</body>
</html>
