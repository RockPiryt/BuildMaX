@model IEnumerable<BuildMaX.Web.Models.Domain.Variant>

@{
    ViewData["Title"] = "Warianty";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj wariant</a>
    <a asp-action="TopProfitable" class="btn btn-outline-secondary">Top profitable (>= 40%)</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().Name)</th>
            <th>@Html.DisplayNameFor(m => m.First().Price)</th>
            <th>@Html.DisplayNameFor(m => m.First().Description)</th>
            <th>@Html.DisplayNameFor(m => m.First().IncludesPdf)</th>
            <th>@Html.DisplayNameFor(m => m.First().IncludesPercentDetails)</th>
            <th>@Html.DisplayNameFor(m => m.First().IncludesSitePlan)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@Html.DisplayFor(_ => item.Name)</td>
            <td>@Html.DisplayFor(_ => item.Price)</td>
            <td>@Html.DisplayFor(_ => item.Description)</td>
            <td>@Html.DisplayFor(_ => item.IncludesPdf)</td>
            <td>@Html.DisplayFor(_ => item.IncludesPercentDetails)</td>
            <td>@Html.DisplayFor(_ => item.IncludesSitePlan)</td>
            <td class="text-end">
                <a asp-action="Details" asp-route-id="@item.VariantId" class="btn btn-sm btn-outline-info">Szczegóły</a>
                <a asp-action="Edit" asp-route-id="@item.VariantId" class="btn btn-sm btn-outline-primary">Edytuj</a>
                <a asp-action="Delete" asp-route-id="@item.VariantId" class="btn btn-sm btn-outline-danger">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
