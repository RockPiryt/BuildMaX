@model IEnumerable<BuildMaX.Web.Models.Domain.AnalysisRequest>

@{
    ViewData["Title"] = "Ranking opłacalności";
}

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="mb-0">Ranking opłacalności</h1>
        <a class="btn btn-outline-primary" asp-controller="AnalysisRequests" asp-action="Index">Wróć do listy</a>
    </div>

    <p class="text-body-secondary">
        Top analiz wg procentu zabudowy (BuiltUpPercent).
    </p>

    <div class="card">
        <div class="card-body">
            @if (Model == null || !Model.Any())
            {
                <div class="text-body-secondary">Brak danych do wyświetlenia.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Data</th>
                                <th>Adres</th>
                                <th>Wariant</th>
                                <th class="text-end">Zabudowa %</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>@item.Address</td>
                                    <td>@item.Variant?.Name</td>
                                    <td class="text-end">@((item.BuiltUpPercent ?? 0).ToString("0.##"))</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
