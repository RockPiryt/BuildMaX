@model BuildMaX.Web.Models.Domain.AnalysisRequest
@{
    ViewData["Title"] = "Usuń analizę";
}

<h1>Usuń analizę</h1>

<div class="card">
    <p>Czy na pewno chcesz usunąć tę analizę?</p>

    <dl>
        <dt>ID</dt>
        <dd>@Model.AnalysisRequestId</dd>

        <dt>Wariant</dt>
        <dd>@Model.Variant?.Name</dd>

        <dt>Adres</dt>
        <dd>@Model.Address</dd>

        <dt>Data</dt>
        <dd>@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="AnalysisRequestId" />
        <button type="submit">Usuń</button>
        <a asp-action="Index" class="secondary">Anuluj</a>
    </form>
</div>
