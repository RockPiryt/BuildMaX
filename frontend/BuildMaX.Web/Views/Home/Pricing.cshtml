@model IEnumerable<BuildMaX.Web.Models.Domain.Variant>

@{
    ViewData["Title"] = "Cennik";
    var variants = Model.OrderBy(v => v.Price).ToList();

    string PlanName(string name)
    {
        // jeśli masz nazwy "Wariant 1/2/3" – zostaw; jeśli inne, to też zadziała
        return name;
    }

    string HeaderClass(BuildMaX.Web.Models.Domain.Variant v)
    {
        // wyróżnij najdroższy jako "primary"
        var max = variants.Max(x => x.Price);
        return v.Price == max ? "text-bg-primary border-primary" : "";
    }

    string CardBorder(BuildMaX.Web.Models.Domain.Variant v)
    {
        var max = variants.Max(x => x.Price);
        return v.Price == max ? "border-primary" : "";
    }

    string ButtonClass(BuildMaX.Web.Models.Domain.Variant v)
    {
        var max = variants.Max(x => x.Price);
        return v.Price == max ? "btn btn-lg btn-primary w-100" : "btn btn-lg btn-outline-primary w-100";
    }
}

<div class="container py-3">
    <header class="pb-3 mb-4 border-bottom">
        <div class="d-flex flex-column flex-md-row align-items-center">
            <span class="fs-4">Cennik BuildMaX</span>
            <nav class="d-inline-flex mt-2 mt-md-0 ms-md-auto">
                <a class="me-3 py-2 link-body-emphasis text-decoration-none" asp-controller="Home" asp-action="Index">Home</a>
                <a class="py-2 link-body-emphasis text-decoration-none" asp-controller="Home" asp-action="Pricing">Cennik</a>
            </nav>
        </div>
    </header>

    <div class="pricing-header p-3 pb-md-4 mx-auto text-center">
        <h1 class="display-4 fw-normal">Warianty</h1>
        <p class="fs-5 text-body-secondary">
            Wybierz zakres analizy działki: od szybkiej kalkulacji chłonności po pełny plan zagospodarowania.
        </p>
    </div>

    <main>
        <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
            @foreach (var v in variants)
            {
                <div class="col">
                    <div class="card mb-4 rounded-3 shadow-sm @CardBorder(v)">
                        <div class="card-header py-3 @HeaderClass(v)">
                            <h4 class="my-0 fw-normal">@PlanName(v.Name)</h4>
                        </div>
                        <div class="card-body">
                            <h1 class="card-title pricing-card-title">
                                @v.Price.ToString("0.00") PLN
                                <small class="text-body-secondary fw-light">/ analiza</small>
                            </h1>

                            <ul class="list-unstyled mt-3 mb-4 text-start">
                                @if (v.IncludesPdf)
                                {
                                    <li>Raport PDF z podstawami prawnymi</li>
                                }
                                @if (v.IncludesPercentDetails)
                                {
                                    <li>Szczegóły procentowe: zabudowa / zieleń / utwardzenia</li>
                                    <li>Parking: TIR i osobowe</li>
                                    <li>Wykrywanie obszarów problemowych</li>
                                }
                                @if (v.IncludesSitePlan)
                                {
                                    <li>Plan zagospodarowania działki (site plan)</li>
                                }
                                @if (!string.IsNullOrWhiteSpace(v.Description))
                                {
                                    <li class="mt-2 text-body-secondary">@v.Description</li>
                                }
                            </ul>

                            <a class="@ButtonClass(v)" asp-controller="Account" asp-action="Register">
                                Wybierz i załóż konto
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <h2 class="display-6 text-center mb-4">Porównanie funkcji</h2>
        <div class="table-responsive">
            <table class="table text-center">
                <thead>
                    <tr>
                        <th style="width: 34%;"></th>
                        @foreach (var v in variants)
                        {
                            <th style="width: 22%;">@v.Name</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row" class="text-start">Raport PDF</th>
                        @foreach (var v in variants)
                        {
                            <td>@(v.IncludesPdf ? "✓" : "")</td>
                        }
                    </tr>
                    <tr>
                        <th scope="row" class="text-start">Dane procentowe</th>
                        @foreach (var v in variants)
                        {
                            <td>@(v.IncludesPercentDetails ? "✓" : "")</td>
                        }
                    </tr>
                    <tr>
                        <th scope="row" class="text-start">Plan zagospodarowania</th>
                        @foreach (var v in variants)
                        {
                            <td>@(v.IncludesSitePlan ? "✓" : "")</td>
                        }
                    </tr>
                </tbody>
            </table>
        </div>
    </main>
</div>
